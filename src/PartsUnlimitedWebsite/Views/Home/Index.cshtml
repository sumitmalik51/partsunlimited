@model PartsUnlimited.ViewModels.HomeViewModel

@using PartsUnlimited

@{
    ViewBag.Title = "Home Page";
}

@section scripts {
    <script>
        $('.carousel').carousel()
    </script>
}

@section prebody {
<div class="hero-display">
    <div id="jumbotron-carousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators" style="bottom: 0px !important;">
            <li data-target="#jumbotron-carousel" data-slide-to="0" class="active"></li>
            <li data-target="#jumbotron-carousel" data-slide-to="1"></li>
            <li data-target="#jumbotron-carousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active" style="background-image: url(/images/hero_image1.jpg); height: 350px">
                <a href="@Url.Action("Browse", "Store", new { categoryId = 5 })" class="carousel-wrapper-link"></a>
                <div class="adv-text">
                    <p>All oil and filters</p>
                    <p>20%</p>
                    <p>discount</p>
                </div>
                <div class="carousel-caption hidden-xs hidden-sm">
                    <a href="@Url.Action("Browse", "Store", new { categoryId = 5 })" class="carousel-link primary-shop-btn"  >Shop Now</a>
                </div>
            </div>
            <div class="item" style="background-image: url(/images/hero_image2.jpg); height: 350px">
                <a href="@Url.Action("Browse", "Store", new { categoryId = 3 })" class="carousel-wrapper-link"></a>
                <div class="container adv-text" style="margin-right: 130px;">
                    <p style="text-align: center;">New tires</p>
                    <ul class="justify-div-in-center">
                        <li>Improved fuel efficiency</li>
                        <li>Superior wet weather braking</li>
                        <li>Added durability</li>
                    </ul>
                </div>
                <div class="carousel-caption hidden-xs hidden-sm">
                    <a href="@Url.Action("Browse", "Store", new { categoryId = 3 })" class="carousel-link primary-shop-btn">Shop Now</a>
                </div>
            </div>
            <div class="item" style="background-image: url(/images/hero_image3.jpg); height: 350px">
                <a href="@Url.Action("Index", "Store")" class="carousel-wrapper-link"></a>
                <div class="adv-text">
                    <p>Old or New</p>
                    <p>Find the parts for you</p>
                </div>
                <div class="carousel-caption hidden-xs hidden-sm">
                    <a href="@Url.Action("Browse", "Store", new { categoryId = 3 })" class="carousel-link primary-shop-btn">Shop Now</a>
                </div>
            </div>
        </div>

        <!-- Controls -->
        <a class="left carousel-control" style="border-bottom-right-radius: 4px; border-top-right-radius: 4px; margin: auto; width: 47px; height: 104px; align-items: center; background-color: white; box-shadow: 0 1px 5px 0 rgb(0 0 0 / 11%); transition: opacity .1s ease-in; opacity: 1 !important; background-image: none;" href="#jumbotron-carousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" style="z-index: 0 !important;" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" style="border-bottom-right-radius: 4px; border-top-right-radius: 4px; margin: auto; width: 47px; height: 104px; align-items: center; background-color: white; box-shadow: 0 1px 5px 0 rgb(0 0 0 / 11%); transition: opacity .1s ease-in; opacity: 1 !important; background-image: none;" href="#jumbotron-carousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" style="z-index: 0 !important;" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
    }

